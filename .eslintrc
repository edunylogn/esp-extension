// Use this file as a starting point for your project's .eslintrc.
{
    "plugins": [
        "react"
    ],
    "extends": [
        "airbnb/base",
        "plugin:react/recommended"
    ],

    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },

    "rules": {
        // add rule overrides as needed
        "indent": ["error", 4],
        "max-len": ["error", 150, 4],
        "comma-dangle": 0,
        "prefer-const": 1, // We want to allow using 'let' for arrays
        "prefer-arrow-callback": 1,
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true, "ImportDeclaration": true } }]
    }
}
